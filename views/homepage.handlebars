      <p>{{cosplay.user.name}}</p>
      <p>{{cosplay.description}}</p>
    </a>
  </section>
      {{/each}}
  {{else}}
  {{#each cosplays as |cosplay|}}
      <section class="card card-style mb-3 col-6 p-1">
      <header>{{cosplay.name}}</header>
